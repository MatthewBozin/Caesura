{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "jsx": "react-jsx",
        "skipLibCheck": true
    },
    "ts-node": {
        "files": true
    },
    "include": [
        "./src/"
    ],
    "exclude": [
        "./node-modules"
    ]
}